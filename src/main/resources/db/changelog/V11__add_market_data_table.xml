<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="11" author="WEBAPP">
        <createTable tableName="market_data">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="ticker" type="VARCHAR(255)"/>
            <column name="price" type="DECIMAL(19, 4)"/>
            <column name="change_amount" type="DECIMAL(19, 4)"/>
            <column name="change_percentage" type="VARCHAR(255)"/>
            <column name="type" type="VARCHAR(255)"/>
            <column name="last_updated" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
