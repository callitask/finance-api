<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="17-add-category-id-to-blog-posts" author="dev">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="blog_posts" columnName="category_id"/>
            </not>
        </preConditions>
        <addColumn tableName="blog_posts">
            <column name="category_id" type="BIGINT"/>
        </addColumn>
        <addForeignKeyConstraint baseColumnNames="category_id"
                                 baseTableName="blog_posts"
                                 constraintName="fk_blog_posts_category"
                                 referencedColumnNames="id"
                                 referencedTableName="categories"/>
    </changeSet>

    <changeSet id="18-populate-category-id" author="dev">
        <preConditions onFail="MARK_RAN">
             <columnExists tableName="blog_posts" columnName="category"/>
        </preConditions>
        <sql>
            UPDATE blog_posts bp
            SET bp.category_id = (SELECT c.id FROM categories c WHERE c.name = bp.category)
            WHERE bp.category IS NOT NULL;
        </sql>
    </changeSet>

    <changeSet id="19-drop-old-category-column" author="dev">
         <preConditions onFail="MARK_RAN">
            <columnExists tableName="blog_posts" columnName="category"/>
        </preConditions>
        <dropColumn tableName="blog_posts" columnName="category"/>
    </changeSet>

</databaseChangeLog>
