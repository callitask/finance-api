<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="30-1-create-api-fetch-status" author="treishvaam">
        <preConditions onFail="MARK_RAN">
            <not><tableExists tableName="api_fetch_status"/></not>
        </preConditions>
        <createTable tableName="api_fetch_status">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="api_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_fetch_time" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="trigger_source" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="details" type="VARCHAR(1024)"/>
        </createTable>
    </changeSet>

    <changeSet id="30-2-create-system-property" author="treishvaam">
        <preConditions onFail="MARK_RAN">
            <not><tableExists tableName="system_property"/></not>
        </preConditions>
        <createTable tableName="system_property">
            <column name="prop_key" type="VARCHAR(255)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="prop_value" type="DATETIME"/>
        </createTable>
    </changeSet>

    <changeSet id="30-3-create-market-holiday" author="treishvaam">
        <preConditions onFail="MARK_RAN">
            <not><tableExists tableName="market_holiday"/></not>
        </preConditions>
        <createTable tableName="market_holiday">
            <column name="holiday_date" type="DATE">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="event_name" type="VARCHAR(255)"/>
            <column name="market" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>