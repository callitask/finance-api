<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="30-1-create-api-fetch-status" author="treishvaam">
        <preConditions onFail="MARK_RAN"><not><tableExists tableName="api_fetch_status"/></not></preConditions>
        <createTable tableName="api_fetch_status">
            <column name="id" type="BIGINT" autoIncrement="true"><constraints primaryKey="true" nullable="false"/></column>
            <column name="api_name" type="VARCHAR(255)"><constraints nullable="false"/></column>
            <column name="last_fetch_time" type="TIMESTAMP"><constraints nullable="false"/></column>
            <column name="status" type="VARCHAR(255)"><constraints nullable="false"/></column>
            <column name="trigger_source" type="VARCHAR(255)"><constraints nullable="false"/></column>
            <column name="details" type="VARCHAR(1024)"/>
        </createTable>
    </changeSet>

    <changeSet id="30-2-create-historical-price" author="treishvaam">
        <preConditions onFail="MARK_RAN"><not><tableExists tableName="historical_price"/></not></preConditions>
        <createTable tableName="historical_price">
            <column name="id" type="BIGINT" autoIncrement="true"><constraints primaryKey="true" nullable="false"/></column>
            <column name="ticker" type="VARCHAR(255)"/>
            <column name="price_date" type="DATE"/>
            <column name="close_price" type="DECIMAL(19, 4)"/>
        </createTable>
        <addUniqueConstraint tableName="historical_price" columnNames="ticker, price_date" constraintName="uk_ticker_date"/>
    </changeSet>

    <changeSet id="30-3-create-market-holiday" author="treishvaam">
        <preConditions onFail="MARK_RAN"><not><tableExists tableName="market_holiday"/></not></preConditions>
        <createTable tableName="market_holiday">
            <column name="holiday_date" type="DATE"><constraints primaryKey="true" nullable="false"/></column>
            <column name="event_name" type="VARCHAR(255)"/>
            <column name="market" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="30-4-create-news-highlights" author="treishvaam">
        <preConditions onFail="MARK_RAN"><not><tableExists tableName="news_highlights"/></not></preConditions>
        <createTable tableName="news_highlights">
            <column name="id" type="BIGINT" autoIncrement="true"><constraints primaryKey="true" nullable="false"/></column>
            <column name="title" type="VARCHAR(512)"><constraints nullable="false"/></column>
            <column name="link" type="VARCHAR(1024)"><constraints nullable="false"/></column>
            <column name="source" type="VARCHAR(255)"/>
            <column name="published_at" type="TIMESTAMP"/>
            <column name="created_at" type="TIMESTAMP"/>
        </createTable>
        <addUniqueConstraint tableName="news_highlights" columnNames="link" constraintName="uk_news_link"/>
    </changeSet>

    <changeSet id="30-5-create-system-property" author="treishvaam">
        <preConditions onFail="MARK_RAN"><not><tableExists tableName="system_property"/></not></preConditions>
        <createTable tableName="system_property">
            <column name="prop_key" type="VARCHAR(255)"><constraints primaryKey="true" nullable="false"/></column>
            <column name="prop_value" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

</databaseChangeLog>